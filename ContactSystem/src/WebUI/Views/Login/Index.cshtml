@model LoginModel
@{
    Layout = "_LayoutUnlogged";
    ViewData["Title"] = "Login";
}

@if (TempData["MessageError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert"
            aria-label="Close">X</button>
        @TempData["MessageError"]
    </div>
}

@if (TempData["MessageSuccess"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert"
            aria-label="Close">X</button>
        @TempData["MessageSuccess"]
    </div>
}

<form asp-controller="Login" asp-action="Enter" method="post">

    <div class="form-group mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group mb-3">
        <label for="password" class="form-label">Senha</label>
        <input type="password" asp-for="Password" class="form-control" id="password">
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <p class="mb-4 text-sm mx-auto">
        Esqueceu sua Senha?
        <a class="text-primary text-gradient font-weight-bold"
            asp-controller="Login" asp-action="ResetPassword">Redefinir Senha</a>
    </p>

    <button type="submit" class="btn btn-primary">Entrar</button>
</form>