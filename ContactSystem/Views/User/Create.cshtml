@using ContactSystem.Enums
@model UserModel
@{
    ViewData["Title"] = "Cadastrar Usuário";
}

<div class="text-center">
    <h2 class="display-4">Cadastrar Usuário</h2>
</div>

<form asp-controller="User" asp-action="Create" method="post">

    <div class="form-group mb-3">
        <label for="name" class="form-label">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o Nome do Usuário">
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o Email do Usuário">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o Login do Usuário">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group mb-3">
        <label for="profile" class="form-label">Perfil</label>
        <select asp-for="Profile" class="form-control">
            <option>Selecione o Perfil do Usuário</option>
            <option value="@Profile.Admin">Administrador</option>
            <option value="@Profile.Default">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Profile)
    </div>

    <div class="form-group mb-3">
        <label for="password" class="form-label">Senha</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Digite a Senha do Usuário">
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" role="button" asp-controller="User" asp-action="Index">Voltar</a>
</form>