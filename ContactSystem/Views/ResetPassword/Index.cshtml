@model ResetPasswordModel
@{
    Layout = "_LayoutUnlogged";
    ViewData["Title"] = "Redefinir Senha";
}

@if (TempData["MessageError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert"
            aria-label="Close">X</button>
        @TempData["MessageError"]
    </div>
}

@if (TempData["MessageSuccess"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["MessageSuccess"]
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
    </div>
}

<form asp-controller="Login" asp-action="ResetPasswordLink" method="post">

    <div class="form-group mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" id="email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <button type="submit" class="btn btn-primary">Salvar Senha</button>
    <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Login" role="button">Voltar</a>
</form>